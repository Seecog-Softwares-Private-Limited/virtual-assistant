<div>
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Manage Services</h1>
      <p class="text-gray-600 dark:text-gray-400">Create and manage your service offerings</p>
    </div>
    <a href="/admin/services/new" class="btn-primary">
      + New Service
    </a>
  </div>
  
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    {{#if services.length}}
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Category</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Title</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Duration</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Price</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {{#each services}}
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">{{category}}</td>
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900 dark:text-white">{{title}}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{description}}</div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">{{duration_mins}} mins</td>
                <td class="px-6 py-4 text-sm font-semibold text-purple-600 dark:text-purple-400">â‚¹{{starting_price}}</td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 text-xs font-semibold rounded-full {{#if (eq is_active 1)}}bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300{{else}}bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300{{/if}}">
                    {{#if (eq is_active 1)}}Active{{else}}Inactive{{/if}}
                  </span>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center space-x-2">
                    <a href="/admin/services/{{id}}/edit" class="text-purple-600 dark:text-purple-400 hover:underline text-sm">Edit</a>
                    <form action="/admin/services/{{id}}/delete" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this service?');">
                      <button type="submit" class="text-red-600 dark:text-red-400 hover:underline text-sm">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <div class="p-12 text-center">
        <p class="text-gray-500 dark:text-gray-400 mb-4">No services found</p>
        <a href="/admin/services/new" class="btn-primary inline-block">Create First Service</a>
      </div>
    {{/if}}
  </div>
</div>

