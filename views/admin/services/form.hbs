<div class="max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
      {{#if service}}Edit Service{{else}}New Service{{/if}}
    </h1>
    <a href="/admin/services" class="text-purple-600 dark:text-purple-400 hover:underline">← Back to services</a>
  </div>
  
  <form action="/admin/services{{#if service}}/{{service.id}}{{/if}}" method="POST" class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-8">
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="category" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Category *</label>
        <select name="category" id="category" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
          <option value="">Select category</option>
          <option value="Grooming" {{#if (eq service.category 'Grooming')}}selected{{/if}}>Grooming</option>
          <option value="Walking" {{#if (eq service.category 'Walking')}}selected{{/if}}>Walking</option>
          <option value="Vet/Vaccination" {{#if (eq service.category 'Vet/Vaccination')}}selected{{/if}}>Vet/Vaccination</option>
          <option value="Food Delivery" {{#if (eq service.category 'Food Delivery')}}selected{{/if}}>Food Delivery</option>
          <option value="Shelter/Boarding" {{#if (eq service.category 'Shelter/Boarding')}}selected{{/if}}>Shelter/Boarding</option>
          <option value="Training" {{#if (eq service.category 'Training')}}selected{{/if}}>Training</option>
        </select>
      </div>
      
      <div>
        <label for="sortOrder" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Sort Order</label>
        <input type="number" name="sortOrder" id="sortOrder" value="{{service.sort_order}}" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
    </div>
    
    <div class="mb-6">
      <label for="title" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Title *</label>
      <input type="text" name="title" id="title" value="{{service.title}}" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
    </div>
    
    <div class="mb-6">
      <label for="description" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Description *</label>
      <textarea name="description" id="description" rows="3" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">{{service.description}}</textarea>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="durationMins" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Duration (minutes) *</label>
        <input type="number" name="durationMins" id="durationMins" value="{{service.duration_mins}}" required min="1" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
      
      <div>
        <label for="startingPrice" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Starting Price (₹) *</label>
        <input type="number" name="startingPrice" id="startingPrice" value="{{service.starting_price}}" required step="0.01" min="0" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
    </div>
    
    <div class="mb-6">
      <label for="includes" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Includes (one per line) *</label>
      <textarea name="includes" id="includes" rows="5" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">{{#if service}}{{#each service.includes}}{{this}}{{#unless @last}}
{{/unless}}{{/each}}{{/if}}</textarea>
      <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Enter each included item on a new line</p>
    </div>
    
    <div class="mb-6">
      <label class="flex items-center">
        <input type="checkbox" name="isActive" {{#if (eq service.is_active 1)}}checked{{/if}} class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Active</span>
      </label>
    </div>
    
    <div class="flex items-center space-x-4">
      <button type="submit" class="btn-primary">
        {{#if service}}Update Service{{else}}Create Service{{/if}}
      </button>
      <a href="/admin/services" class="btn-secondary">Cancel</a>
    </div>
  </form>
</div>

