<div class="max-w-4xl">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
      {{#if plan}}Edit Pricing Plan{{else}}New Pricing Plan{{/if}}
    </h1>
    <a href="/admin/pricing" class="text-purple-600 dark:text-purple-400 hover:underline">← Back to pricing</a>
  </div>
  
  <form action="/admin/pricing{{#if plan}}/{{plan.id}}{{/if}}" method="POST" class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-8">
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Plan Name *</label>
        <input type="text" name="name" id="name" value="{{plan.name}}" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
      
      <div>
        <label for="priceMonthly" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Monthly Price (₹) *</label>
        <input type="number" name="priceMonthly" id="priceMonthly" value="{{plan.price_monthly}}" required step="0.01" min="0" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
    </div>
    
    <div class="mb-6">
      <label for="features" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Features (one per line) *</label>
      <textarea name="features" id="features" rows="8" required class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">{{#if plan}}{{#each plan.features}}{{this}}{{#unless @last}}
{{/unless}}{{/each}}{{/if}}</textarea>
      <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">Enter each feature on a new line</p>
    </div>
    
    <div class="grid md:grid-cols-2 gap-6 mb-6">
      <div>
        <label for="sortOrder" class="block text-sm font-semibold text-gray-700 dark:text-gray-300 mb-2">Sort Order</label>
        <input type="number" name="sortOrder" id="sortOrder" value="{{plan.sort_order}}" class="w-full px-4 py-3 rounded-xl border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
    </div>
    
    <div class="mb-6 space-y-3">
      <label class="flex items-center">
        <input type="checkbox" name="isPopular" {{#if (eq plan.is_popular 1)}}checked{{/if}} class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Mark as Popular</span>
      </label>
      <label class="flex items-center">
        <input type="checkbox" name="isActive" {{#if (eq plan.is_active 1)}}checked{{/if}} class="w-4 h-4 text-purple-600 border-gray-300 rounded focus:ring-purple-500">
        <span class="ml-2 text-sm text-gray-700 dark:text-gray-300">Active</span>
      </label>
    </div>
    
    <div class="flex items-center space-x-4">
      <button type="submit" class="btn-primary">
        {{#if plan}}Update Plan{{else}}Create Plan{{/if}}
      </button>
      <a href="/admin/pricing" class="btn-secondary">Cancel</a>
    </div>
  </form>
</div>

