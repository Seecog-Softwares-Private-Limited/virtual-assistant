<div>
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Manage Pricing</h1>
      <p class="text-gray-600 dark:text-gray-400">Create and manage pricing plans</p>
    </div>
    <a href="/admin/pricing/new" class="btn-primary">
      + New Plan
    </a>
  </div>
  
  <div class="grid md:grid-cols-3 gap-6 mb-8">
    {{#each plans}}
      <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border-2 {{#if (eq is_popular 1)}}border-purple-500{{else}}border-gray-200 dark:border-gray-700{{/if}} p-6">
        {{#if (eq is_popular 1)}}
          <div class="mb-4">
            <span class="px-3 py-1 bg-gradient-to-r from-purple-600 to-pink-600 text-white text-xs font-bold rounded-full">POPULAR</span>
          </div>
        {{/if}}
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{{name}}</h3>
        <div class="text-4xl font-bold text-purple-600 dark:text-purple-400 mb-4">
          â‚¹{{price_monthly}}<span class="text-lg text-gray-500 dark:text-gray-400">/mo</span>
        </div>
        <ul class="space-y-2 mb-6">
          {{#each features}}
            <li class="flex items-start text-sm text-gray-600 dark:text-gray-400">
              <svg class="w-5 h-5 mr-2 text-purple-600 dark:text-purple-400 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              {{this}}
            </li>
          {{/each}}
        </ul>
        <div class="flex items-center space-x-2">
          <a href="/admin/pricing/{{id}}/edit" class="btn-secondary flex-1 text-center text-sm py-2">Edit</a>
          <form action="/admin/pricing/{{id}}/delete" method="POST" class="flex-1" onsubmit="return confirm('Are you sure?');">
            <button type="submit" class="w-full px-4 py-2 bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors text-sm font-medium">Delete</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>

