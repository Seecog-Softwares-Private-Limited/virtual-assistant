<div>
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-2">Manage Bookings</h1>
    <p class="text-gray-600 dark:text-gray-400">View and manage customer bookings</p>
  </div>
  
  <!-- Filters -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 p-6 mb-6">
    <form method="GET" action="/admin/bookings" class="flex flex-col md:flex-row gap-4">
      <div class="flex-1">
        <input type="text" name="search" value="{{search}}" placeholder="Search by name, phone, email..." class="w-full px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
      </div>
      <div>
        <select name="status" class="px-4 py-2 rounded-lg border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-900 text-gray-900 dark:text-white focus:ring-2 focus:ring-purple-500 focus:border-transparent">
          <option value="all" {{#if (eq status 'all')}}selected{{/if}}>All Status</option>
          <option value="New" {{#if (eq status 'New')}}selected{{/if}}>New ({{statusCounts.New}})</option>
          <option value="Confirmed" {{#if (eq status 'Confirmed')}}selected{{/if}}>Confirmed ({{statusCounts.Confirmed}})</option>
          <option value="Completed" {{#if (eq status 'Completed')}}selected{{/if}}>Completed ({{statusCounts.Completed}})</option>
          <option value="Cancelled" {{#if (eq status 'Cancelled')}}selected{{/if}}>Cancelled ({{statusCounts.Cancelled}})</option>
        </select>
      </div>
      <button type="submit" class="btn-primary px-6">Filter</button>
      {{#if search}}
        <a href="/admin/bookings" class="btn-secondary px-6">Clear</a>
      {{/if}}
    </form>
  </div>
  
  <!-- Bookings Table -->
  <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden">
    {{#if bookings.length}}
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-900">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Customer</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Pet</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Service</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Date/Time</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Status</th>
              <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 dark:text-gray-400 uppercase">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {{#each bookings}}
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900 dark:text-white">{{customer_name}}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{email}}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{phone}}</div>
                </td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 dark:text-white">{{pet_type}}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{pet_breed}}, {{pet_age}}</div>
                </td>
                <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-400">{{service_title_snapshot}}</td>
                <td class="px-6 py-4">
                  <div class="text-sm text-gray-900 dark:text-white">{{preferred_date}}</div>
                  <div class="text-xs text-gray-500 dark:text-gray-400">{{preferred_time}}</div>
                </td>
                <td class="px-6 py-4">
                  <span class="px-2 py-1 text-xs font-semibold rounded-full 
                    {{#if (eq status 'New')}}bg-blue-100 dark:bg-blue-900/30 text-blue-800 dark:text-blue-300{{/if}}
                    {{#if (eq status 'Confirmed')}}bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300{{/if}}
                    {{#if (eq status 'Completed')}}bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300{{/if}}
                    {{#if (eq status 'Cancelled')}}bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300{{/if}}
                  ">
                    {{status}}
                  </span>
                </td>
                <td class="px-6 py-4">
                  <a href="/admin/bookings/{{id}}" class="text-purple-600 dark:text-purple-400 hover:underline text-sm">View</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      
      <!-- Pagination -->
      {{#if pagination.totalPages}}
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700 flex items-center justify-between">
          <div class="text-sm text-gray-600 dark:text-gray-400">
            Showing {{pagination.currentPage}} of {{pagination.totalPages}} pages ({{pagination.total}} total)
          </div>
          <div class="flex space-x-2">
            {{#if pagination.hasPrev}}
              <a href="/admin/bookings?page={{add pagination.currentPage -1}}&search={{search}}&status={{status}}" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 text-sm">Previous</a>
            {{/if}}
            {{#if pagination.hasNext}}
              <a href="/admin/bookings?page={{add pagination.currentPage 1}}&search={{search}}&status={{status}}" class="px-4 py-2 bg-gray-200 dark:bg-gray-700 rounded-lg hover:bg-gray-300 dark:hover:bg-gray-600 text-sm">Next</a>
            {{/if}}
          </div>
        </div>
      {{/if}}
    {{else}}
      <div class="p-12 text-center">
        <p class="text-gray-500 dark:text-gray-400">No bookings found</p>
      </div>
    {{/if}}
  </div>
</div>

