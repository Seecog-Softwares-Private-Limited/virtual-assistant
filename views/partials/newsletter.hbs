<section class="py-20 bg-gradient-to-r from-purple-600 to-pink-600">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center text-white">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Stay Updated</h2>
      <p class="text-xl text-purple-100 mb-8">
        Subscribe to our newsletter for pet care tips, special offers, and service updates.
      </p>
      <form class="flex flex-col sm:flex-row gap-4 max-w-md mx-auto" x-data="{ email: '', submitted: false }" @submit.prevent="submitted = true">
        <input type="email" 
               x-model="email"
               placeholder="Enter your email" 
               required
               class="flex-1 px-6 py-4 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white">
        <button type="submit" 
                class="px-8 py-4 bg-white text-purple-600 font-semibold rounded-xl hover:bg-gray-100 transition-colors">
          Subscribe
        </button>
        <p x-show="submitted" class="text-sm text-purple-100 mt-2">Thank you for subscribing!</p>
      </form>
    </div>
  </div>
</section>

