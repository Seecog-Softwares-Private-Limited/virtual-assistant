<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  
  <title>{{title}} | Stella Admin</title>
  
  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Styles -->
  <link rel="stylesheet" href="/css/output.css">
  
  <!-- Alpine.js -->
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-gray-100">
  {{#unless (eq title 'Admin Login')}}
    {{> admin/navbar}}
  {{/unless}}
  
  {{#if hideNav}}
    <main class="min-h-screen relative px-4">
      {{#if success}}
        <div class="absolute top-8 left-1/2 transform -translate-x-1/2 px-4 z-10" style="width: 40%; max-width: 40%;">
          {{#each success}}
            <div class="mb-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl p-4 shadow-sm">
              <p class="text-green-800 dark:text-green-300 text-sm font-medium">{{this}}</p>
            </div>
          {{/each}}
        </div>
      {{/if}}
      
      {{#if error}}
        <div class="absolute top-8 left-1/2 transform -translate-x-1/2 px-4 z-10" style="width: 40%; max-width: 40%;">
          {{#each error}}
            <div class="mb-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4 shadow-sm">
              <p class="text-red-800 dark:text-red-300 text-sm font-medium">{{this}}</p>
            </div>
          {{/each}}
        </div>
      {{/if}}
      
      <div class="w-full mx-auto" style="width: 40%; max-width: 40%; margin-top: 50vh; transform: translateY(-50%);">
        {{{body}}}
      </div>
    </main>
  {{else}}
    <main class="container mx-auto px-4 sm:px-6 lg:px-8 py-8">
      {{#if success}}
        {{#each success}}
          <div class="mb-6 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl p-4">
            <p class="text-green-800 dark:text-green-300">{{this}}</p>
          </div>
        {{/each}}
      {{/if}}
      
      {{#if error}}
        {{#each error}}
          <div class="mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl p-4">
            <p class="text-red-800 dark:text-red-300">{{this}}</p>
          </div>
        {{/each}}
      {{/if}}
      
      {{{body}}}
    </main>
  {{/if}}
  
  <!-- Scripts -->
  <script src="/js/main.js"></script>
</body>
</html>

