# ============================================
# Stella Pet Services - Properties Configuration
# ============================================
# This file contains all configuration for both staging and production
# The application will use the appropriate config based on NODE_ENV

# ============================================
# ENVIRONMENT SELECTION
# ============================================
# Options: 'production', 'staging', or 'development'
# Set this when running the application:
#   NODE_ENV=production npm start
#   NODE_ENV=staging npm start
#   NODE_ENV=development npm run dev
NODE_ENV=development

# ============================================
# STAGING ENVIRONMENT CONFIGURATION
# ============================================
# Used when NODE_ENV=staging or NODE_ENV=development
DB_HOST_STAGE=localhost
DB_PORT_STAGE=3306
DB_NAME_STAGE=virtual_assistant_service
DB_USER_STAGE=root
DB_PASSWORD_STAGE=1234

# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Used when NODE_ENV=production
# DB_HOST_PROD=your-production-host.com
# DB_PORT_PROD=3306
# DB_NAME_PROD=stella_pet_services_prod
# DB_USER_PROD=your_prod_user
# DB_PASSWORD_PROD=your_production_password

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Server Port (default: 3000)
PORT=3000

# Session Secret (CHANGE THIS IN PRODUCTION!)
# Generate a secure secret with: openssl rand -base64 32
# SESSION_SECRET=stella-pet-services-secret-key-change-in-production-min-32-chars

# ============================================
# OPTIONAL CONFIGURATIONS
# ============================================
# Seed demo data on startup (true/false)
SEED_DATA=false

# Skip migrations on startup (true/false)
SKIP_MIGRATIONS=false

